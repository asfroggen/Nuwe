<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.esaudev.nuwe.ui.components.NuwePrimaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuwePrimaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuwePrimaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuwePrimaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuwePrimaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:is_loading="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <com.esaudev.nuwe.ui.components.NuweSecondaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweSecondaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweSecondaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweSecondaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweSecondaryButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:is_loading="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <com.esaudev.nuwe.ui.components.NuweFlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweFlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweFlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="true"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweFlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:button_enabled="false"
            app:is_loading="false"/>

        <com.esaudev.nuwe.ui.components.NuweFlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/ic_add"
            app:button_text="@string/app_name"
            app:is_loading="true"/>
    </LinearLayout>
</LinearLayout>