<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ==============================================================================-->
    <!-- Buttons. -->
    <!-- ==============================================================================-->
    <style name="Widget.Nuwe.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/nuwe_primary_active</item>
        <item name="backgroundTint">@drawable/states_background_primary_button</item>
    </style>

    <style name="Widget.Nuwe.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@drawable/states_text_color_secondary_button</item>
        <item name="android:textColor">@drawable/states_text_color_secondary_button</item>
        <item name="iconTint">@drawable/states_text_color_secondary_button</item>
        <item name="rippleColor">@color/nuwe_primary_15</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.Nuwe.Button.Flat" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@drawable/states_text_color_secondary_button</item>
        <item name="iconTint">@drawable/states_text_color_secondary_button</item>
        <item name="rippleColor">@color/nuwe_primary_15</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>